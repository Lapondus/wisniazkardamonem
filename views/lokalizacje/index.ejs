<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
    <h1>Wszystkie Lokalizacje</h1>
    <p>
        <% if(currentUser && currentUser.role=='admin' ) {%>
            <div>
                <a href="/lokalizacje/nowa">Nowa lokalizacja</a>
            </div>
            <% } %>
                <ul>
                    <% for (let lokalizacja of lokalizacje) { %>
                        <li><a href="/lokalizacje/<%= lokalizacja._id %>">
                                <%= lokalizacja.miejscowość%> (<%=lokalizacja.opis %>)
                            </a></li>
                        <% } %>
                </ul>
    </p>
    <div>
        <a href="/">Strona Główna</a>
    </div>
    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const lokalizacje = {features: <%- JSON.stringify(lokalizacje) %>};
    </script>
<script src="/scripts/clusterMap.js"></script>